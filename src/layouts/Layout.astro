---
import "../styles/global.scss";
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Unlock the secrets of the Thai language with our comprehensive guide. Learn to read Thai effortlessly with simple and effective techniques. Start your journey today!"
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.classless.min.css"
      rel="preload"
      as="style"
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>{title}</title>
  </head>

  <body>
    <slot />
  </body>
  <script is:inline src="/js/main.js" defer></script>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script
    is:inline
    async
    src="https://www.googletagmanager.com/gtag/js?id=G-WWCFCHJCMF"
  ></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-WWCFCHJCMF");
  </script>
</html>
